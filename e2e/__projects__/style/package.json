{
  "name": "style",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test": "jest --no-cache test.js"
  },
  "devDependencies": {
    "postcss": "^7.0.13"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.vue$": "../../../lib"
    },
    "moduleNameMapper": {
      "^~?__styles/(.*)$": "<rootDir>/components/styles/$1"
    },
    "globals": {
      "vue-jest": {
        "resources": {
          "scss": [
            "variables.scss"
          ],
          "less": [
            "variables.less"
          ]
        }
      }
    }
  }
}
